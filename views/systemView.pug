html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no")
    script(src='/socket.io/socket.io.js')
    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    script(src='/js/site.js')
    link(rel='stylesheet' href='/stylesheets/style.css')
    title=system.name
  body
    div(class='root')
    
      //Asset Template
      div(class='asset', id='template')
        div(class='d-flex')
          div(class='asset__callsign -border-row')
          button(class='asset__delete') X
        div(class='asset__controls -border-cols')
          span(class='asset__name -border-col')
          span(class='asset__hp -border-col')
            span
              input(class='asset__current-hp', value=10)
            span /
            span(class='asset__max-hp')
            span HP
        div(class='-border-row')
          div(class='asset__location') Location: 
            select(class='asset__location-select')
              
      //Faction Template
      div(class='faction' id='template')
        div(class='faction__name')
        div(class='faction__assets')
      
      //Star Template
      div(class='star' id='template')
      
      //Orbital Template
      div(class='orbital' id='template')
      
      //Planet template
      div(class='planet satellite' id='template')
      
      //Asset dot template
      div(class='asset-dot satellite' id='template')
      
      //Asset Form
      div(class='asset-form' id='template') Create new asset
        form(class='asset-form__form')
          label(class='asset-form__callsign-label' for='new-asset-callsign') Callsign
          input(class='asset-form__callsign-input' name='callsign' id='new-asset-callsign')
          label(class='asset-form__name-label' for='new-asset-name') Asset Type
          input(class='asset-form__name-input' name='name' id='new-asset-name')
          label(class='asset-form__max-hp-label' for='new-asset-max-hp')  Max HP
          input(class='asset-form__max-hp-input' type='number' name='maxHp' id='new-asset-max-hp')
          label(class='asset-form__faction-label' for='new-asset-faction') Faction
          select(class='asset-form__faction-select' name='faction' id='new-asset-faction')
          label(class='asset-form__location-label' for='new-asset-location') Location
          select(class='asset-form__location-select' name='location' id='new-asset-location')
          button(class='asset-form__submit') Create
